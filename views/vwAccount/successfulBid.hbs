<nav aria-label="breadcrumb" style="margin-top: 40px;">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/" style="color: #007bff;">Home</a></li>
    <li class="breadcrumb-item"><a href="/user/profile" style="color: #007bff;">My Account</a></li>
    <li class="breadcrumb-item active" aria-current="page">Successfull Bid</li>
  </ol>
</nav>

<div class="container mt-3 mb-5" style="display: block;">
  <div class="row mt-2">
    <div class="col-sm-3">
      <h3 class="title"><i class="fa fa-address-book"></i>Mysterios</h3>
      <hr>
      <div class="sidenav">
        <div class="dropdown-pf"><i class="fa fa-user-circle"></i>My profile</div>
        <div class="dropdown-container-pf" style="display: none;">
          <a class="item" href="/user/profile">Background</a>
          <a class="item" href="/user/changepwd">Change Password</a>
        </div>
        <a href="/user/wishlist"><i class="fa fa-list-alt"></i>Wishlist</a>
        <a href="/user/feedback"><i class="fa fa-bell"></i>Feedback</a>
        <a href="/user/cartBidding"><i class="fa fa-shopping-bag"></i>Bid product</a>
        <a href="/user/successfulBid" style="color: blue;"><i class="fa fa-usd"></i>Succesful auction</a>
        <a href="/user/manageProductSeller"><i class="fa fa-archive"></i>Manage products</a>
      </div>
    </div>
    <div class="col-sm-9" id="scroll">
      <h4>BIDS HISTORY</h4>
      <hr>
      <div class="in-stock">

        <hr class="mt-1">
        <a class="item" href="#">

          <div class="card-body shadow-sm p-3 mb-5 bg-white rounded" style="min-width: 689px; height:195px;">
            <div class="row">
              <div class="col-sm-2">
                <img src="https://assets.catawiki.nl/assets/2019/10/15/9/4/3/943bc99c-f59c-4174-b7d2-41d8cfd94489.jpg"
                  alt="" class = "categories">
              </div>
              <div class="col-sm-10">
                <h5 class="item-title">Glycine - Collezione "AIRMAN WORLD TIME 4" Watch 1990 - Esaurito
                  - 3323.35A - Men -
                  1990</h5>
                <div class="item-content">Quartz - Steel - Documents, Full set, Warranty</div>
                <div class="row">
                  <div class="col-sm-6 mt-1">
                    <p style="font-weight:700;">Close in</p>
                    <p id="timeOut">3d 3h 3m 3s </p>
                  </div>
                  <div class="col-sm-2">
                    <p style="font-size: 25px; font-weight: 700;">$</p>
                    <p style="font-size: 25px; font-weight: 700;">100</p>
                  </div>
                  <div class="col-sm-4">
                    <button type="button" class="btn btn-outline-warning rounded-pill" data-toggle="modal"
                      data-target="#exampleModal" data-whatever="@mdo">
                      Rate this item
                    </button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                      aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">New
                              message</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <form>
                              <div class=" form-group">
                                <label for="message-text" class="col-form-label">Rate:</label>
                              </div>
                              <div class="d-flex justify-content-sm-center">
                                <p id="rate">(-1)</p>
                                <img class="cart mt-2" id="dislike" onclick="rate(this)"
                                  src="https://image.flaticon.com/icons/svg/149/149190.svg" alt="">
                                <img class="cart mb-2" id="like" onclick="rate(this)"
                                  src="https://image.flaticon.com/icons/svg/149/149189.svg" alt="">
                                <p id="rate1">(+1)</p>
                              </div>
                            </form>
                            <form>
                              <div class="form-group">
                                <label for="message-text" class="col-form-label">Feedback:</label>
                                <textarea class="form-control" id="message-text"></textarea>
                              </div>
                            </form>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Send
                              message</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>