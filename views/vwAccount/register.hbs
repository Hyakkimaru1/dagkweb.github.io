{{#section 'css'}}
<!-- fonts -->
<link href="//fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=Monoton" rel="stylesheet">
<!-- /fonts -->
<!-- css -->
<link href="/css/register.css" rel='stylesheet' type='text/css' media="all">
<!-- /css -->
{{/section}}

{{#section 'js'}}
<script src='https://www.google.com/recaptcha/api.js'></script>
<script src="/js/register.js" type="text/javascript"></script>
{{/section}}

<div class="container w-90 border border-dark" style="margin-top: 100px; margin-bottom: 100px">
	<div class="row">
		<div class="col-6" style="background: url(/images/content.jpg) no-repeat; background-size: cover;">
			<h2 class="agileits1">Auction Online</h2>
			<div class="agileits2">BID, WIN AND CLOSE WITH CONFIDENCE.</div>
		</div>
		<div class="col-6">
			<div class="row h-20">
				<div class="col-12 p-0">
					<div class="title-register">
						<div><i class="fa fa-buysellads" aria-hidden="true"></i> Auction Online</div>
					</div>
				</div>
			</div>

			<form onsubmit="return validate();" method="POST" id="frmRegister" name="frmRegister" autocomplete="off">

				<div class="row mb-3">
					<div class="col-6 pl-3 pr-3">
						<input type="text" id="txtFirstName" name="firstname" placeholder="FirstName"
							title="Please enter your First name">
						<div id="errFName"></div>
					</div>
					<div class="col-6 pl-3 pr-3">
						<input type="text" id="txtLastName" name="lastname" placeholder="LastName"
							title="Please enter your Last name">
						<div id="errLName"></div>
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-12 pl-3 pr-3">
						<input type="text" id="txtAddr" name="addr" placeholder="Address"
							title="Please enter your address">
						<div id="errAddr"></div>
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-12 pl-3 pr-3">
						<input type="text" id="txtUserName" name="username" placeholder="UserName"
							title="Please enter user name">
						<div id="errUserName"></div>
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-12 pl-3 pr-3">
						<input type="text" id="txtEmail" name="email" placeholder="mail@example.com"
							title="Please enter a valid email">
						<div id="errEmail"></div>
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-6 pl-3 pr-3">
						<input type="password" name="raw_password" placeholder="Password" id="password1">
						<div id="errPwd"></div>
					</div>
					<div class="col-6 pl-3 pr-3">
						<input type="password" placeholder="Confirm Password" id="password2">
						<div id="errCfpwd"></div>
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-12 pl-3 pr-3">
						<div class="g-recaptcha" id="recaptcha" data-sitekey="6Le5KsEUAAAAAHey0TrA7WZeK_cFDy68DQ1THGhK">
						</div>
						<div id="errCaptcha"></div>
					</div>
				</div>

				<div class="row">
					<div class="col-12 p-0">
						<input type="submit" class="register" value="Register">
					</div>
				</div>
			</form>
		</div>
	</div>
</div>