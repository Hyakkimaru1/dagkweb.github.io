{{#section 'css'}}
<!-- fonts -->
<link href="//fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=Monoton" rel="stylesheet">
<!-- /fonts -->
<!-- css -->
<link href="/css/register.css" rel='stylesheet' type='text/css' media="all">
<link rel="stylesheet" href="/css/login.css">
<link rel="stylesheet" href="/css/confirmEmailOTP.css">
<!-- /css -->
{{/section}}

{{#section 'js'}}
<script src="/js/newPassword.js"></script>
{{/section}}

<div class="container w-90 border border-dark" style="margin-top: 100px; margin-bottom: 100px">
	<div class="row">
		<div class="col-6" style="background: url(/images/content.jpg) no-repeat; background-size: cover;">
			<h2 class="agileits1">Auction Online</h2>
			<div class="agileits2">BID, WIN AND CLOSE WITH CONFIDENCE.</div>
		</div>
		{{#if success_message}}
		<div class="col-6">
			<div class="row h-20">
				<div class="col-12 p-0">
					<div class="title-register">
						<div><i class="fa fa-buysellads" aria-hidden="true"></i> Auction Online</div>
					</div>
				</div>
			</div>
			<div id="title">NEW PASSWORD</div>
			<div class="alert alert-success" role="alert">
				{{success_message}}
			</div>
			<div class="d-flex justify-content-center">
				<button type="button" class="btn btn-success" onclick="window.location.href='/account/login'">Move to Login</button>
			</div>
		</div>
		{{else}}
		<div class="col-6">
			<div class="row h-20">
				<div class="col-12 p-0">
					<div class="title-register">
						<div><i class="fa fa-buysellads" aria-hidden="true"></i> Auction Online</div>
					</div>
				</div>
			</div>
			<div id="title">NEW PASSWORD</div>
			<div class="row mb-3">
				<div class="col-12 text-white d-flex justify-content-center">
					<div>
						A OTP code is correct. You can change your password.
					</div>
				</div>
			</div>
		
			<form class="form-newPwd" action="/account/newPassword" method="post" autocomplete="off">
				<div class="row mb-3">
					<div class="col-12">
                        <div class="d-flex justify-content-center">
							<input class="w-50" type="password" name="newpassword" placeholder="Enter your new password" id="password1" autofocus>
						</div>
						
						<div class="d-flex justify-content-center">
							<div class="w-50 mb-2" id="errPwd"></div>
						</div>
					</div>
				</div>

                <div class="row mb-3">
					<div class="col-12">
						<input class="w-50" type="password" placeholder="Confirm Password" id="password2">
						<div class="d-flex justify-content-center">
							<div class="w-50 mb-2" id="errCfpwd"></div>
						</div>
					</div>
				</div>
		
				<div class="row mb-3">
					<div class="col-12">
						<div class="d-flex justify-content-center">
							<button type="submit" class="validate w-25">Reset</button>
							<button type="button" class="cancel w-25" onclick="window.location.href='/'">Cancel</button>
						</div>
					</div>
				</div>
			</form>
		</div>		
        {{/if}}
    </div>
</div>	