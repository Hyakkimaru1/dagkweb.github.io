{{#section 'css'}}
<!-- fonts -->
<link href="//fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=Monoton" rel="stylesheet">
<!-- /fonts -->
<!-- css -->
<link href="/css/register.css" rel='stylesheet' type='text/css' media="all">
<link rel="stylesheet" href="/css/login.css">
<link rel="stylesheet" href="/css/confirmEmailOTP.css">
<!-- /css -->
{{/section}}

{{#section 'js'}}
<script src="/js/confirmEmailOTP.js"></script>
{{/section}}

<div class="container w-90 border border-dark" style="margin-top: 100px; margin-bottom: 100px">
	<div class="row">
		<div class="col-6" style="background: url(/images/content.jpg) no-repeat; background-size: cover;">
			<h2 class="agileits1">Auction Online</h2>
			<div class="agileits2">BID, WIN AND CLOSE WITH CONFIDENCE.</div>
		</div>
		{{#if success_message}}
		<div class="col-6">
			<div class="row h-20">
				<div class="col-12 p-0">
					<div class="title-register">
						<div><i class="fa fa-buysellads" aria-hidden="true"></i> Auction Online</div>
					</div>
				</div>
			</div>
			<div id="title">CONFIRM EMAIL OTP</div>
			<div class="alert alert-success" role="alert">
				{{success_message}}
			</div>
			<div class="d-flex justify-content-center">
				<button type="button" class="btn btn-success" onclick="window.location.href='/account/login'">Move to
					Login</button>
			</div>
		</div>
		{{else}}
		<div class="col-6">
			<div class="row h-20">
				<div class="col-12 p-0">
					<div class="title-register">
						<div><i class="fa fa-buysellads" aria-hidden="true"></i> Auction Online</div>
					</div>
				</div>
			</div>
			<div id="title">CONFIRM EMAIL OTP</div>
			<div class="row mb-3">
				<div class="col-12 text-white d-flex justify-content-center">
					<div>
						A OTP (One Time Passcode) has been sent to <b>{{email}}</b><br>Please enter the OTP in the field
						below to verify.
					</div>
				</div>
			</div>

			{{#if err_message}}
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				{{err_message}}
			</div>
			{{/if}}
			<form class="form-confirmOTP" action="/account/sendOTP" method="post" autocomplete="off">
				<div class="row mb-3">
					<div class="col-12">
						<input type="text" id="txtOTP" name="otp" placeholder="Enter your email OTP." autofocus>
						<div class="d-flex justify-content-center">
							<div class="error w-50 mb-2" id="errOTP"></div>
						</div>
						<div class="d-flex justify-content-center">
							<a href="/account/resend" class="w-50">Resend OTP</a>
						</div>
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-12">
						<div class="d-flex justify-content-center">
							<button type="submit" class="validate w-25">Validate OTP</button>
							<button type="button" class="cancel w-25" onclick="window.location.href='/'">Cancel</button>
						</div>
					</div>
				</div>
			</form>
		</div>
		{{/if}}

	</div>
</div>