{{#section 'css'}}
<link rel="stylesheet" href="/css/account.css">
{{/section}}

{{#section 'js'}}
<script src="/js/account.js"></script>
{{/section}}

<nav aria-label="breadcrumb" style="margin-top: 40px;">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/user/profile">My Account</a></li>
    <li class="breadcrumb-item active" aria-current="page">Background</li>
  </ol>
</nav>
<div class="container mt-3 mb-5" style="display: block;">
  <div class="row mt-2">
    <div class="col-sm-3">
      <h3 class="title"><i class="fa fa-address-book"></i>Mysterios</h3>
      <hr>
      <div class="sidenav">
        <div class="dropdown-pf"><i class="fa fa-user-circle"></i>My profile</div>
        <div class="dropdown-container-pf">
          <a class="item" href="/user/profile" style="color: blue;">Background</a>
          <a class="item" href="/user/changepwd">Change Password</a>
        </div>
        <a href="/user/wishlist"><i class="fa fa-list-alt"></i>Wishlist</a>
        <a href="/user/feedback"><i class="fa fa-bell"></i>Feedback</a>
        <a href="/user/cartBidding"><i class="fa fa-shopping-bag"></i>Bid product</a>
        <a href="/user/successfulBid"><i class="fa fa-usd"></i>Succesful auction</a>
        <a href="/user/manageProductSeller"><i class="fa fa-archive"></i>Manage products</a>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="content_menu">
        <div class="content">
          <h3>My profile</h3>
          <div> Manage your personal informations</div>
          <hr>
          <form id="form-manage" method="POST">
            {{#if err_message}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              {{err_message}}
            </div>
            {{/if}}

            {{#if success_message}}
            <div class="alert alert-success" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              {{success_message}}
            </div>
            {{/if}}
            <div class="form-group row">
              <label class="col-sm-3 col-form-label col-form-label-sm">FirstName</label>
              <div class="col-sm-9">
                <input type="text" class="form-control form-control-sm w-75" id="firstname" name="firstname" placeholder
                  value="{{authUser.firstname}}">
                <span class="error" id="errFirstName"></span>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-3 col-form-label col-form-label-sm">LastName</label>
              <div class="col-sm-9">
                <input type="text" class="form-control form-control-sm w-75" id="lastname" name="lastname" placeholder
                  value="{{authUser.lastname}}">
                <span class="error" id="errLastName"></span>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-3 col-form-label col-form-label-sm">Address</label>
              <div class="col-sm-9">
                <input type="text" class="form-control form-control-sm w-75" id="Addr" name="addr" placeholder
                  value="{{authUser.addr}}">
                <span class="error" id="errAddr"></span>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-3 col-form-label col-form-label-sm">Email</label>
              <div class="col-sm-9">
                <input type="text" class="form-control form-control-sm w-75" id="Email" name="email" placeholder
                  value="{{authUser.email}}">
                <span class="error" id="errEmail"></span>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-3"></div>
              <div class="col-sm-9">
                <button type="submit" class="btn btn-primary" id="btnSubmit">Save</button>
                <button type="button" class="btn btn-primary ml-3"
                  onclick="window.location.href='/'">Cancel</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div style="margin-left: 30px;">
        <img id="avatar" src="/images/content.jpg" width="150px" height="150px"
          class="rounded-circle center-block">
        <button id="falseinput" type="button" class="btn btn-dark pg-10 center-block w-150" style="width: 150px;">Change
          Avatar</button>
        <input id="fileinput" type="file" style="display:none;" />
      </div>
    </div>
  </div>
</div>