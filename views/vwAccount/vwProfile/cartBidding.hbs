{{#section 'css'}}
<link rel="stylesheet" href="/css/wishlist.css">
<link rel="stylesheet" href="/css/account.css">
{{/section}}

{{#section 'js'}}
<script src="/js/account.js"></script>
{{/section}}

<nav aria-label="breadcrumb" style="margin-top: 40px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" style="color: #007bff;">Home</a></li>
        <li class="breadcrumb-item"><a href="/user/profile" style="color: #007bff;">My Account</a></li>
        <li class="breadcrumb-item active" aria-current="page">Bid product</li>
    </ol>
</nav>
<div class="container mt-3 mb-5" style="display: block;">
    <div class="row mt-2">
        <div class="col-sm-3">
            <h3 class="title"><i class="fa fa-address-book"></i>Mysterios</h3>
            <hr>
            <div class="sidenav">
                <div class="dropdown-pf"><i class="fa fa-user-circle"></i>My profile</div>
                <div class="dropdown-container-pf" style="display: none;">
                    <a class="item" href="/user/profile">Background</a>
                    <a class="item" href="/user/changepwd">Change Password</a>
                </div>
                <a href="/user/wishlist"><i class="fa fa-list-alt"></i>Wishlist</a>
                <a href="/user/feedback"><i class="fa fa-bell"></i>Feedback</a>
                <a href="/user/cartBidding" style="color: blue;"><i class="fa fa-shopping-bag"></i>Bid product</a>
                <a href="/user/successfulBid"><i class="fa fa-usd"></i>Succesful auction</a>
                <a href="/user/manageProductSeller"><i class="fa fa-archive"></i>Manage products</a>
            </div>
        </div>
        <div class="col-sm-9" id="scroll">
            <h4>Wishlist</h4>
            <div>Your favorite products.</div>
            <hr class="mt-3">
            {{#if this.empty}}
            <div><b>Your wishlist is empty!</b></div>
            {{else}}
            {{#each this.products}}
            {{#if isDuration}}

            <div class="in-stock">
                <div class="card-body shadow-sm mb-5 p-3 bg-white rounded h-100 w-100">
                    <div class="row">
                        <div class="col-sm-2" href="product.html">
                            <img src="https://assets.catawiki.nl/assets/2019/10/15/9/4/3/943bc99c-f59c-4174-b7d2-41d8cfd94489.jpg"
                                alt="" class="categories">
                        </div>
                        <div class="col-sm-10">
                            <h5 class="item-title" href="product.html">{{ten_SP}}</h5>
                            <div class="item-content">{{moTaSP}}</div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <p style="font-size: 15px; font-weight: 700;">Your bid: {{format gia}}đ</p>
                                    <p style="font-size: 15px; font-weight: 700;">Buy now: {{format gia_MuaNgay}}đ</p>
                                    <br>
                                    <p style="font-size: 15px; font-weight:700;">Close in</p>
                                    <p id="timeOut">{{timeOut}}</p>
                                </div>
                                <div class="col-sm-6">
                                    <button type="button" class="btn btn-outline-primary rounded-pill"
                                        onclick="window.location.href='/product/{{id_SP}}'">View this
                                        lot</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>