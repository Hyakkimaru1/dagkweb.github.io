{{#section 'css'}}
<link rel="stylesheet" href="/css/account.css">
<link rel="stylesheet" href="/css/changePwd.css">
{{/section}}

{{#section 'js'}}
<script src="/js/account.js"></script>
<script src="/js/changePwd.js"></script>
{{/section}}

<nav aria-label="breadcrumb" style="margin-top: 40px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/user/profile">My Account</a></li>
        <li class="breadcrumb-item active" aria-current="page">Change password</li>
    </ol>
</nav>

<div class="container mt-3 mb-5">
    <div class="row mt-2">
        <div class="col-sm-3">
            <h3 class="title"><i class="fa fa-address-book"></i>Mysterios</h3>
            <hr>
            <div class="sidenav">
                <div class="dropdown-pf"><i class="fa fa-user-circle"></i>My profile</div>
                <div class="dropdown-container-pf">
                    <a class="item" href="/user/profile">Background</a>
                    <a class="item" href="/user/changepwd" style="color: blue;">Change Password</a>
                </div>
                <a href="/user/wishlist"><i class="fa fa-list-alt"></i>Wishlist</a>
                <a href="/user/feedback"><i class="fa fa-bell"></i>Feedback</a>
                <a href="/user/cartBidding"><i class="fa fa-shopping-bag"></i>Bid product</a>
                <a href="/user/successfulBid"><i class="fa fa-usd"></i>Succesful auction</a>
                <a href="/user/manageProductSeller"><i class="fa fa-archive"></i>Manage products</a>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="content_menu">
                <div class="content">
                    <h2>Change password</h2>
                    <hr>
                    <form id="form-manage" method="POST">
                        {{#if err_message}}
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            {{err_message}}
                        </div>
                        {{/if}}
                    
                        {{#if success_message}}
                        <div class="alert alert-success" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            {{success_message}}
                        </div>
                        {{/if}}
                    
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label col-form-label-sm">Current password </label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control form-control-sm" id="curPwd" name="curpassword" autofocus>
                                <span class="error" id="errCurPwd"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label col-form-label-sm">New password <abbr title="Enter your new password."> <i
                                        class="fa fa-question-circle"></i></abbr></label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control form-control-sm" id="newPwd" name="newpassword">
                                <span class="error" id="errNewPwd"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label col-form-label-sm">Retype password</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control form-control-sm" id="retypePwd">
                                <span class="error" id="errRetypePwd"></span>
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary ml-5" id="btnSubmit">Change</button>
                            <button type="button" class="btn btn-primary ml-3" onclick="window.location.href='/'">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>