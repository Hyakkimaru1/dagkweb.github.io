<div class="col-sm-6">
        <div class="content_menu">
          <div class="content">
            <h3>My profile</h3>
            <div> Manage your personal informations</div>
            <hr>
            <form id="form-manage" action="#" method="post">
              <div class="form-group row">
                <label class="col-sm-3 col-form-label col-form-label-sm">FullName</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control form-control-sm" id="FullName" placeholder
                    value="Park Hang-seo">
                  <span class="error" id="errFullName"></span>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-3 col-form-label col-form-label-sm">Address</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control form-control-sm" id="Addr" placeholder
                    value="123/321 The gioi Viet Nam">
                  <span class="error" id="errAddr"></span>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-3 col-form-label col-form-label-sm">Email</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control form-control-sm" id="Email" placeholder
                    value="abc123@gmail.com">
                  <span class="error" id="errEmail"></span>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-3 col-form-label col-form-label-sm">Date of birth</label>
                <div class="col-sm-9">
                  <input type="date" class="form-control form-control-sm" id="date-of-birth">
                  <span class="error" id="errDate"></span>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-9">
                  <button type="submit" class="btn btn-primary" id="btnSubmit">Save</button>
                  <button type="button" class="btn btn-primary ml-3"
                    onclick="window.location.href='home.html'">Cancel</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-sm-3">
        <div style="margin-left: 30px;">
          <img id="avatar" src="resources/images/content.jpg" width="150px" height="150px"
            class="rounded-circle center-block">
          <button id="falseinput" type="button" class="btn btn-dark pg-10 center-block w-150"
            style="width: 150px;">Change picture</button>
          <input id="fileinput" type="file" style="display:none;" />
        </div>
      </div>