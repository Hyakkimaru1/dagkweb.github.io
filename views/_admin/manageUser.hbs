<div class="col-sm-9" style="margin-top: 20px;">
  <div class="content_menu">
    <div class="content">
      <h3>All user </h3>
      <hr>
      {{#if this.empty}}
      <div class="card-body">
        <p class="card-text">
          Không có dữ liệu.
        </p>
      </div>
      {{else}}
      <div class=" d-flex">
        <button class="btn btn-secondary btn-sm dropdown-toggle my-2 mr-3" type="button" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Filter
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <a class="dropdown-item" href="#">Something else here</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Separated link</a>
        </div>
        <form class="form-inline mt-2 mt-md-0">
          <input class="form-control mr-sm-2" style="display: inline-block;width: 550px;" type="text"
            placeholder="Search" aria-label="Search">
        </form>
        <a href="/admin/users/add" class="btn btn-info my-2 mr-3 py-0 text-center" style="width:auto; height: 38px;">+
          Add user</a>
      </div>
      <table class="table mt-3 ">
        <thead>
          <tr>
            <th scope="row"><input type="checkbox" name="vehicle1" value="Bike"> STT</th>
            <th scope="col">User's name</th>
            <th scope="col">Type</th>
            <th scope="col">Up/Degrade</th>
            <th scope="col">Edit </th>
          </tr>
        </thead>
        <tbody>
          {{#each this.user}}
          

          <tr>
            <th scope="row"><input type="checkbox" name="vehicle1" value="Bike">{{id_user}}</th>
            <td>{{username}}</td>
            <td>{{#if isSeller }} Seller {{else }} Bidder {{/if}}</td>

            <td class=" text-left">
              {{#if isSeller }}
            <form id="{{id_user}}" fation="/admin/users/down" method="POST" style="display: none;">
            <div class="form-group">
              <input type="text" class="form-control" id="txtCatId" name="Permission" value="0">
              <input type="text" class="form-control" id="txtCatId" name="id_user" value="{{id_user}}">
           
            </div>
          </form>
        

                <button  onclick="down({{id_user}})" class=" btn btn-outline-primary btn-sm">

                <i class="fa fa-caret-square-o-down"></i>
              </button>

              {{else if isBidder }}
              <a class=" btn btn-outline-primary btn-sm" >

                <i>--</i>
              </a>
              {{else if isUp}}
              
             <div style="display: none;"> 
          <form id="{{id_user}}" fation="/admin/users/up" method="POST" style="display: none;">
            <div class="form-group">
              <input type="text" class="form-control" id="txtCatId" name="Permission" value="1">
              <input type="text" class="form-control" id="txtCatId" name="id_user" value="{{id_user}}">
           
            </div>
          </form>
          </div>
                <button  onclick="up({{id_user}})" class=" btn btn-outline-primary btn-sm">
                <i class="fa fa-caret-square-o-up"></i>
              </button>
              {{/if}}
            </td>
            <td class=" text-left">
              <a class=" btn btn-outline-primary btn-sm" href="/admin/users/edit/{{id_user}}"><i
                  class="fa fa-pencil-square"></i>
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{/if}}
    </div>
  </div>
</div>