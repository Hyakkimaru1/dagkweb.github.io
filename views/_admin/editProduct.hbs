<div class="col-sm-9" style="margin-top: 20px;">
  <div class="content_menu">
    <div class="content">
      <h3>Edit product </h3>
      <hr>

      <form id="addCategory" method="POST" onsubmit="return check()">
        <div class="form-group">
          <label for="txtCatId">ID</label>
          <input type="text" class="form-control" id="txtCatId" name="id" readonly value="{{products.id}}">
        </div>
        <div class="form-group">
          <label for="txtcatName">Category's name</label>
          <input type="text" name="ten_SP" class="form-control" id="ten_SP" value="{{products.ten_SP}}" placeholder="Enter name">

        </div>
        <a href="/admin/products" class="btn btn-outline-info">
          <i class="fa fa-backward" aria-hidden="true"></i>
          Back</a>
        <button type="submit" formaction="/admin/products/patch" id="addC" class="btn btn-primary">
          <i class="fa fa-check" aria-hidden="true"></i>
          Save</button>
        <button type="submit" formaction="/admin/products/del" class="btn btn-danger">
          <i class="fa fa-trash" aria-hidden="true"></i>
          Delete</button>
      </form>
    </div>
  </div>
</div>  