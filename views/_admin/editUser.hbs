<div class="col-sm-9" style="margin-top: 20px;">
  <div class="content_menu">
    <div class="content">
      <h3>Add category </h3>
      <hr>

      <form id="addCategory" method="POST" >
        <div class="form-group">
          <label for="txtCatId">ID</label>
          <input type="text" class="form-control" id="id_user" name="id_user" readonly value="{{user.id_user}}">
        </div>
        <div class="form-group">
          <label for="txtcatName">Username</label>
          <input type="text" name="username" class="form-control" id="username" value="{{user.username}}" placeholder="Enter name">

        </div>
        <a href="/admin/categories" class="btn btn-outline-info">
          <i class="fa fa-backward" aria-hidden="true"></i>
          Back</a>
        <button type="submit" formaction="/admin/users/patch" id="addC" class="btn btn-primary">
          <i class="fa fa-check" aria-hidden="true"></i>
          Save</button>
        <button type="submit" formaction="/admin/categories/del" class="btn btn-danger">
          <i class="fa fa-trash" aria-hidden="true"></i>
          Delete</button>
      </form>
    </div>
  </div>
</div>  